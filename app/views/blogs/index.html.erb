<div class="row col-md-6 col-md-offset-3 center">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash-#{name}" %>
  <% end %>
</div>

<div class="row col-md-6 col-md-offset-3 center">
  <div class='add-blog form-inline'>
    <%= form_for @blog, url: blogs_path  do |f| %>
      <%= f.text_field :author, placeholder: 'Your Name', class: "form-control" %>
      <%= f.text_field :rss_url, placeholder: "Your Blog's RSS URL", class: "form-control" %>
      <%= f.submit 'Add Your Blog!', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div>
  <div class="posts list-group table-responsive">
    <table class="table">
      <% @posts.each do |post| %>
        <tr class="row col-md-6 col-md-offset-3">
          <td><%= link_to post.title, post.url %></td>
          <td><%= link_to post.blog.author, post.blog.url %></td>
        </tr>
        <!-- <div class="row post col-md-6 col-md-offset-3 list-group-item"> -->
          <!-- <span class='float-right'> -->
            
          <!-- </span> -->
        <!-- </div> -->
      <% end %>
    </table>
  </div>
</div>

